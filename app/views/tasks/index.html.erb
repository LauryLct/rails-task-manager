<h1>My tasks !</h1>

<ul>
  <% @tasks.each do |task| %>
      <li>
        <% if task.completed == true %>
        <input id="accept" name="accept" type="checkbox" checked="true" value="1" />
        <% else%>
        <input id="accept" name="accept" type="checkbox" value="1" />
        <% end %>
        <%= link_to "#{task.title}", show_path(task) -%>
      </li>
  <% end %>
</ul>


<%= link_to 'Create a new task!', new_path %>
