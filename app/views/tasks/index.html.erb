<h1>My tasks !</h1>

<ul>
  <% @tasks.each do |task| %>
      <li>
        <input id="accept" name="accept" type="checkbox" <%= task.completed == true ? 'checked' : '' %> value="1" />
        <%= link_to "#{task.title}", task_path(task) %>
        <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </li>
  <% end %>
</ul>


<%= link_to 'Create a new task!', new_path %>
