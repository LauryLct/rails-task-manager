<%= form_for(task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <% if !params[:id].nil? %>
    <div class="form-group">
      <%= f.label :completed %> <br />
      <%= f.check_box :completed %> <br />
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>

<% end %>

