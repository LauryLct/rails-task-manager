<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<ul>
  <li>
    <% if @task.completed == true %>
      <input id="accept" name="accept" type="checkbox" checked="true" value="1" />
      <% else%>
      <input id="accept" name="accept" type="checkbox" value="1" />
    <% end %>
    <p>Task is completed !</p>
  </li>
</ul>

<%= link_to 'edit your task', edit_path(@task) %>

<%= link_to 'Back to the list', tasks_path %>
